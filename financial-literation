  const [geminiResponse, setGeminiResponse] = useState(''); // State for LLM response
  const [isLoadingGemini, setIsLoadingGemini] = useState(false); // State for loading indicator

  // Speaker identification
  const speakers = {
    'Pembicara 1': 'Pembawa acara/host (Timothy Ronald)',
    'Partisipan Telepon': 'Pemirsa yang menelepon',
  };

